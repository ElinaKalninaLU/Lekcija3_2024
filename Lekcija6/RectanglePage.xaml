<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lekcija6.RectanglePage"
             Title="RectanglePage">
    <VerticalStackLayout>
        <Label 
            Text="Enter Height" />
        <Entry x:Name="HeightTXT"/>
        <Label 
            Text="Enter Width" />
        <Entry x:Name="WidthTXT"/>
        <Button x:Name="AddRectangleBtn" Text="Create rectangle" Clicked="AddRectangleBtn_Clicked"/>
        <Label x:Name="ResultLbl"/>
    </VerticalStackLayout>
</ContentPage>