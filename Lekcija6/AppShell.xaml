<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lekcija6.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lekcija6"
    Shell.FlyoutBehavior="Flyout"
    Title="Lekcija6">

    <ShellContent
        Title="Square"
        ContentTemplate="{DataTemplate local:SquarePage}"
        Route="SquarePage" />
    <ShellContent
    Title="Figures"
    ContentTemplate="{DataTemplate local:GeometryManagerPage}"
    Route="GeometryManagerPage" />
    <ShellContent
   Title="Figure List"
   ContentTemplate="{DataTemplate local:FigureListPage}"
   Route="FigureListPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    

</Shell>
